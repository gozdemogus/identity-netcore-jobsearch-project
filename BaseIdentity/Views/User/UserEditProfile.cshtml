@model UserUpdateViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="login-wrapper">
        <div class="container">
            <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
                <form enctype="multipart/form-data" method="post">

                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Surname</label>
                        <input type="text" asp-for="Surname" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Username</label>
                        <input type="text" asp-for="UserName" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Phone</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Date of Birth</label>
                        <input type="text" asp-for="DateOfBirth" class="form-control" />
                    </div>

                  

                    <div class="form-group">
                        <div class="form-group">
                            <label>Photo</label>
                            <input type="file" asp-for="Image" class="custom-input-file form-control">
