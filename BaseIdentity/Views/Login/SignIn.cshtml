@model AppUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- login section start -->
<section class="login-wrapper">
    <div class="container">
        <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2">
            <form method="post">
                <img class="img-responsive" alt="logo" src="~/JobTema/img/logo.png">

                <div class="form-group">
                    <input type="text" asp-for="UserName" class="form-control input-lg" placeholder="Username">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="password" asp-for="PasswordHash" class="form-control input-lg" placeholder="Password">
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <!--sifre sıfırlama eklenecek-->
                <label><a href="">Forget Password?</a></label>

                <button type="submit" class="btn btn-primary">Login</button>

                <p>Have't Any Account <a href="/Register/SignUp/">Create An Account</a></p>
            </form>
            @Html.ValidationSummary(excludePropertyErrors: true)

        </div>
    </div>
</section>

<!-- login section End -->	