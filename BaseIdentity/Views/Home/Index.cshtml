@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@await Component.InvokeAsync("Banner")

@await Component.InvokeAsync("JobList")


<section class="features">

    <div class="container">
        @if (ViewBag.IsLogged != true)
        {
            <div class="col-md-4 col-sm-4">
                <a href="/Register/SignUp/">
                    <div class="features-content">
                        <span class="box1"><span aria-hidden="true" class="icon-dial"></span></span>
                        <h3>Create An Account</h3>
                        <p>Free, fast, safe</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4 col-sm-4">
                <a href="http://www.example.com">
                    <div class="features-content">
                        <span class="box1"><span aria-hidden="true" class="icon-search"></span></span>
                        <h3>Search Desired Job</h3>
                        <p>More than thousands of companies are here.</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4 col-sm-4">
                <a href="/User/Index/">
                    <div class="features-content">
                        <span class="box1"><span aria-hidden="true" class="icon-printer"></span></span>
                        <h3>Send Your Resume</h3>
                        <p>Your mirror! Easily create your resume.</p>
                    </div>
                </a>
            </div>

        }
        else
        {
            <div class="col-md-6 col-sm-6">
                <a href="http://www.example.com">
                    <div class="features-content">
                        <span class="box1"><span aria-hidden="true" class="icon-search"></span></span>
                        <h3>Search Desired Job</h3>
                        <p>More than thousands of companies are here.</p>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-sm-6">
                <a href="/User/Index/">
                    <div class="features-content">
                        <span class="box1"><span aria-hidden="true" class="icon-printer"></span></span>
                        <h3>Send Your Resume</h3>
                        <p>Your mirror! Easily create your resume.</p>
                    </div>
                </a>
            </div>

        }



    </div>
</section>


@await Component.InvokeAsync("Statistics")


<section class="testimonials dark">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="testimonial-slider" class="owl-carousel">

